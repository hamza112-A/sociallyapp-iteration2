<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity5">

    <!-- Top Header -->


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="70dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/camera"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:contentDescription="Camera"
            app:tint="@color/brown"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/title_socially"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_marginLeft="1dp"/>

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/notify"
            app:tint="@color/brown"
            android:layout_marginEnd="12dp"
            android:contentDescription="Notifications" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/send"
            android:contentDescription="Messages icon" />

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/stories_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/stories_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Stories Section - Hardcoded -->
    <HorizontalScrollView
        android:id="@+id/stories_section"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Your Story -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/your_story_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/a"
                    android:scaleType="centerCrop"
                    android:foreground="@drawable/circle_stroke"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Story"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Story 1 -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story1_thumb"
                    android:contentDescription="Story 1 thumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"
                    android:foreground="@drawable/circle_stroke"
                    android:scaleType="centerCrop"
                    android:src="@drawable/download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="karennne"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Story 2 -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story2_thumb"
                    android:contentDescription="Story 2 thumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/c"
                    android:scaleType="centerCrop"
                    android:foreground="@drawable/circle_stroke"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zackjohn"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Story 3 -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story3_thumb"
                    android:contentDescription="Story 3 thumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/download"
                    android:scaleType="centerCrop"
                    android:foreground="@drawable/circle_stroke"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kieron_d"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Story 4 -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/story4_thumb"
                    android:contentDescription="Story 4 thumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/e"
                    android:scaleType="centerCrop"
                    android:foreground="@drawable/circle_stroke"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="craig"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Main Content ScrollView -->
    <ScrollView
        android:id="@+id/scrollable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/stories_section"
        app:layout_constraintBottom_toTopOf="@id/bottomline">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Post Header -->
            <LinearLayout
                android:id="@+id/post_header"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/download"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="joshua_l"
                            android:textStyle="bold"
                            android:textColor="@color/brown"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="19dp"
                            android:src="@drawable/tick"
                            android:contentDescription="tick"
                            app:tint="@color/brown"
                            android:clipToOutline="true"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tokyo, Japan"
                        android:textSize="14sp"
                        android:textColor="@color/grey" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/more"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/more"
                    android:contentDescription="More options" />

            </LinearLayout>

            <!-- Post Image -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <ImageView
                    android:id="@+id/post_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/e"
                    android:clipToOutline="true" />

                <!-- Image Counter -->
                <TextView
                    android:id="@+id/image_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/3"
                    android:textColor="@android:color/white"
                    android:background="@drawable/rectangle"
                    android:backgroundTint="@color/brown"
                    android:textSize="12sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="12dp" />

            </RelativeLayout>

            <!-- Post Actions -->
            <LinearLayout
                android:id="@+id/actions"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/like_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/like"
                    android:contentDescription="Like"
                    app:tint="@color/black" />

                <ImageView
                    android:id="@+id/comment_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/comment"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Comment" />

                <ImageView
                    android:id="@+id/share_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/send"
                    app:tint="@color/black"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Share" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/bookmark_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/save"
                    android:contentDescription="Save" />

            </LinearLayout>

            <!-- Likes Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/download"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:clipToOutline="true"/>

                <TextView
                    android:id="@+id/pic_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Liked by craig_love and 44,686 others"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Caption -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@id/scrollable"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="joshua_l"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/brown" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" The game in Japan was amazing and I want to share some photos"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <!-- Bottom Navigation -->
    <View
        android:id="@+id/bottomline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="35dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/home_navigation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/search_navigation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:contentDescription="Search" />

        <ImageView
            android:id="@+id/add_navigation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/add"
            android:contentDescription="Add" />

        <ImageView
            android:id="@+id/like_navigation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/like"
            android:contentDescription="like" />

        <ImageView
            android:id="@+id/prof_navigation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/download"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:clickable="true"/>


    </LinearLayout>

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:contentDescription="Sign Out"
        android:drawableTop="@drawable/ic_logout"
        android:drawablePadding="4dp"
        android:text="Sign Out"
        android:textColor="@color/brown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>