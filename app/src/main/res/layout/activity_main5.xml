<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity5">

    <!-- Top Header -->


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="70dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/camera"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:contentDescription="Camera"
            app:tint="@color/brown"
            android:src="@drawable/camera" />

        <TextView
            android:id="@+id/title_socially"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Socially"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/brown"
            android:gravity="center"
            android:layout_marginLeft="1dp"/>

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/notify"
            app:tint="@color/brown"
            android:layout_marginEnd="12dp"
            android:contentDescription="Notifications" />

        <ImageView
            android:id="@+id/send"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/send"
            android:contentDescription="Messages icon" />

    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@id/stories_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/line2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/stories_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Stories Section - Hardcoded -->
    <HorizontalScrollView
        android:id="@+id/stories_section"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Your Story -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/your_story_image"
                    android:layout_width="60dp"
                    android:layout_height="49dp"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"
                    android:foreground="@drawable/circle_stroke"
                    android:scaleType="centerCrop"
                    android:src="@drawable/a" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Story"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Story 1 -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story1_thumb"
                    android:contentDescription="Story 1 thumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"
                    android:foreground="@drawable/circle_stroke"
                    android:scaleType="centerCrop"
                    android:src="@drawable/download" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="karennne"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Story 2 -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story2_thumb"
                    android:contentDescription="Story 2 thumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/c"
                    android:scaleType="centerCrop"
                    android:foreground="@drawable/circle_stroke"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zackjohn"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Story 3 -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/story3_thumb"
                    android:contentDescription="Story 3 thumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/download"
                    android:scaleType="centerCrop"
                    android:foreground="@drawable/circle_stroke"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="kieron_d"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Story 4 -->
            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/story4_thumb"
                    android:contentDescription="Story 4 thumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/e"
                    android:scaleType="centerCrop"
                    android:foreground="@drawable/circle_stroke"
                    android:background="@drawable/circle_background"
                    android:clipToOutline="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="craig"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Main Content ScrollView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/posts_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/stories_section"
        app:layout_constraintBottom_toTopOf="@id/bottomline"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        android:paddingTop="8dp" />

    <!-- Bottom Navigation -->
    <View
        android:id="@+id/bottomline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="35dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/home_navigation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/search_navigation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:contentDescription="Search" />

        <ImageView
            android:id="@+id/add_navigation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/add"
            android:contentDescription="Add" />

        <ImageView
            android:id="@+id/like_navigation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/like"
            android:contentDescription="like" />

        <ImageView
            android:id="@+id/prof_navigation"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/download"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:clickable="true"/>


    </LinearLayout>

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:layout_gravity="end"
        android:contentDescription="Sign Out"
        android:drawableTop="@drawable/ic_logout"
        android:drawablePadding="4dp"
        android:text="Sign Out"
        android:textColor="@color/brown"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>