        <!-- Stories Section - Hardcoded -->
        <HorizontalScrollView
            android:id="@+id/stories_section"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:scrollbars="none"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnEditProfile">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <!-- Your Story -->
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/plus"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/circle_stroke"
                        app:tint="@color/brown"
                        android:background="@drawable/circle_background"
                        android:clipToOutline="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New Story"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Story 1 -->
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:background="@drawable/circle_background"
                        android:clipToOutline="true"
                        android:foreground="@drawable/circle_stroke"
                        android:scaleType="centerCrop"
                        android:src="@drawable/download" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Friend Story"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Story 2 -->
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/c"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/circle_stroke"
                        android:background="@drawable/circle_background"
                        android:clipToOutline="true"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sport Story"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <!-- Story 3 -->
                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="12dp">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/d"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/circle_stroke"
                        android:background="@drawable/circle_background"
                        android:clipToOutline="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Design Story"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:layout_marginTop="4dp" />

                </LinearLayout>


            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>

<!--divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/llTabIcons"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/rvPhotoGrid"
        tools:ignore="MissingConstraints" />
    <!-- Tab Icons -->
    <LinearLayout
        android:id="@+id/llTabIcons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llStoryHighlights">

        <!-- Grid Tab -->
        <ImageView
            android:id="@+id/GridTab"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/grid"
            app:tint="@color/brown"
            android:padding="8dp" />

        <!-- Tagged Tab -->
        <ImageView
            android:id="@+id/TaggedTab"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/tagged"
            app:tint="@color/brown"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Photo Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPhotoGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTabIcons"
        app:layout_constraintBottom_toTopOf="@+id/bottomline" />

    <!-- Bottom Navigation -->
    <View
        android:id="@+id/bottomline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_weight="2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="24dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:paddingStart="32dp"
        android:paddingEnd="35dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/home_navigation"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:contentDescription="Home" />

        <ImageView
            android:id="@+id/search_navigation"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/search"
            android:contentDescription="Search" />

        <ImageView
            android:id="@+id/add_navigation"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/add"
            android:contentDescription="Add" />

        <ImageView
            android:id="@+id/like_navigation"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/like"
            app:tint="@color/brown"
            android:contentDescription="like" />

        <ImageView
            android:id="@+id/prof_navigation"
            android:layout_width="30dp"
            android:layout_marginTop="10dp"
            android:layout_height="30dp"
            android:src="@drawable/download"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"  />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>