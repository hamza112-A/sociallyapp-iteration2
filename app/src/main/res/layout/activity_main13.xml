<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity13">

    <!-- Top Bar with Profile Name and Menu -->
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/lock"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="150dp"
            app:tint="@color/brown"
            android:layout_marginTop="16dp"
            android:src="@drawable/lock" />

        <TextView
            android:id="@+id/ProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="jacob_w"
            android:textColor="@color/brown"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="120dp"
            android:src="@drawable/down"
            app:tint="@color/brown"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/ProfileName"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/tvMenuIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            app:tint="@color/brown"
            android:layout_marginEnd="16dp"
            android:src="@drawable/menu" />

    </LinearLayout>

    <!-- Profile Picture -->
    <ImageView
        android:id="@+id/ProfilePicture"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle_background"
        android:foreground="@drawable/circle_stroke"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        android:src="@drawable/b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topbar" />

    <!-- Posts Count -->
    <TextView
        android:id="@+id/PostsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="54"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="40dp"
        app:layout_constraintStart_toEndOf="@+id/ProfilePicture"
        app:layout_constraintTop_toTopOf="@+id/ProfilePicture" />

    <TextView
        android:id="@+id/tvPostsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posts"
        android:textSize="18sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@+id/PostsCount"
        app:layout_constraintTop_toBottomOf="@+id/PostsCount" />

    <!-- Followers Count -->
    <TextView
        android:id="@+id/FollowersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="834"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/PostsCount"
        app:layout_constraintTop_toTopOf="@+id/PostsCount" />

    <TextView
        android:id="@+id/FollowersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Followers"
        android:textSize="18sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@+id/FollowersCount"
        app:layout_constraintTop_toBottomOf="@+id/FollowersCount" />

    <!-- Following Count -->
    <TextView
        android:id="@+id/FollowingCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="162"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/FollowersCount"
        app:layout_constraintTop_toTopOf="@+id/FollowersCount" />

    <TextView
        android:id="@+id/FollowingLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:textSize="18sp"
        android:textColor="#666666"
        app:layout_constraintStart_toStartOf="@+id/FollowingCount"
        app:layout_constraintTop_toBottomOf="@+id/FollowingCount" />

    <!-- Profile Name -->
    <TextView
        android:id="@+id/pName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jacob West"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ProfilePicture" />

    <!-- Bio -->
    <TextView
        android:id="@+id/Bio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Digital goodies designer @pixsellz\nEverything is designed."
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pName" />

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:text="Edit Profile"
        android:textSize="16sp"
        android:textColor="@color/brown"
        android:background="@drawable/input_box"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Bio" />

    <!-- Story Highlights -->
    <LinearLayout
        android:id="@+id/llStoryHighlights"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnEditProfile">

