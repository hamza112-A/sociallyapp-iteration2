<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity9">

    <!-- Header Container -->

    <!-- Chat Messages RecyclerView -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F0F0F0"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:contentDescription="Back"
            android:focusable="true"
            android:src="@drawable/back"
            app:tint="@color/brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Profile Circle -->
        <TextView
            android:id="@+id/profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#1DA1F2"
            android:clipToOutline="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="IS"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/backArrow"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Username -->
        <TextView
            android:id="@+id/username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="internshala"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/videoCallIcon"
            app:layout_constraintStart_toEndOf="@id/profile"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Video Call Icon -->
        <ImageView
            android:id="@+id/videoCallIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:contentDescription="Video Call"
            android:focusable="true"
            android:src="@drawable/video"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/infoIcon"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#000000" />

        <!-- Info Icon -->
        <ImageView
            android:id="@+id/infoIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:contentDescription="Info"
            android:focusable="true"
            android:src="@drawable/icon_i"
            app:tint="@color/brown"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMessages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toTopOf="@id/messageInputLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- Message Input Layout - Beginner Version -->
    <LinearLayout
        android:id="@+id/messageInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F0F0"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Camera Icon with Red Circle - Simplified -->
        <RelativeLayout
            android:id="@+id/cameraContainer"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp">

            <!-- Red Circle Background -->
            <View
                android:id="@+id/cameraCircle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_background"
                android:backgroundTint="@color/brown"/>

            <!-- Camera Icon -->
            <ImageView
                android:id="@+id/cameraIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/camera_filled"
                app:tint="@color/white"
                android:contentDescription="Camera" />

        </RelativeLayout>

        <!-- Message Input Field -->
        <EditText
            android:id="@+id/messageEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/input_box"
            android:hint="Message..."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:textColorHint="#888888"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:inputType="text"
            android:maxLines="4" />

        <!-- Gallery Icon -->
        <ImageView
            android:id="@+id/galleryIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:src="@drawable/photo"
            app:tint="@color/brown"
            android:contentDescription="Gallery" />

        <!-- Send Icon -->
        <ImageView
            android:id="@+id/sendIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/send"
            app:tint="@color/brown"
            android:contentDescription="Send" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>